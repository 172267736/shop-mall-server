            <if test="createDate != null">
                create_date,
            </if>
            <if test="updateDate != null">
                update_date,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="goodsUniqueId != null">
                #{goodsUniqueId},
            </if>
            <if test="goodsStock != null">
